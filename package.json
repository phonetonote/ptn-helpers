{
  "name": "ptn-helpers",
  "version": "0.0.17",
  "type": "module",
  "description": "helper functions to fetch and display ptn data",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint src/",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phonetonote/ptn-helpers.git"
  },
  "keywords": [
    "ptn",
    "phonetonote",
    "phonetonote-helpers"
  ],
  "author": "srb",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phonetonote/ptn-helpers/issues"
  },
  "homepage": "https://github.com/phonetonote/ptn-helpers#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  }
}
