{
  "name": "ptn-helpers",
  "version": "0.0.1",
  "description": "helper functions to fetch and display ptn data",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phonetonote/ptn-helpers.git"
  },
  "keywords": [
    "ptn",
    "phonetonote",
    "phonetonote-helpers"
  ],
  "author": "srb",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phonetonote/ptn-helpers/issues"
  },
  "homepage": "https://github.com/phonetonote/ptn-helpers#readme",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
